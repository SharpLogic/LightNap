{
  "name": "lightnap-ng",
  "version": "21.0.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --proxy-config proxy.conf.js",
    "start:prod": "ng serve --proxy-config proxy-prod-backend.conf.js",
    "build": "ng build",
    "lint": "eslint . --ext .ts,.html",
    "lint:fix": "eslint . --ext .ts,.html --fix",
    "format": "prettier --write \"src/**/*.{ts,html,json,css}\"",
    "format:check": "prettier --check \"src/**/*.{ts,html,json,css}\"",
    "test": "ng test",
    "test:watch": "ng test",
    "test:ci": "ng test --watch=false",
    "test:coverage": "ng test --watch=false --code-coverage",
    "test:coverage:open": "ng test --watch=false --code-coverage && start coverage/lightnap-ng/index.html",
    "test:headless": "ng test --watch=false",
    "test:debug": "ng test --browsers=Chrome --watch=true",
    "e2e": "cypress run",
    "e2e:backend": "node scripts/run-e2e-backend.js",
    "e2e:open": "cypress open",
    "e2e:ci": "cypress run --record --parallel",
    "e2e:mocks": "cypress run --env useMocks=true",
    "e2e:mocks:open": "cypress open --env useMocks=true",
    "deploy": "ng build --configuration production",
    "update:check": "ncu --reject \"/@angular/\"",
    "update:deps": "ncu -u --reject \"/@angular/\" && npm install && npm run build",
    "update:angular": "ng update @angular/core @angular/cli && npm run build",
    "update:all": "npm run update:angular && npm run update:deps",
    "update:all:test": "npm run update:all && npm run test:ci",
    "generate:api": "node scripts/generate-api.js"
  },
  "private": true,
  "dependencies": {
    "@angular-devkit/build-angular": "^21.0.2",
    "@angular/animations": "^21.0.3",
    "@angular/common": "^21.0.3",
    "@angular/compiler": "^21.0.3",
    "@angular/core": "^21.0.3",
    "@angular/elements": "^21.0.3",
    "@angular/forms": "^21.0.3",
    "@angular/platform-browser": "^21.0.3",
    "@angular/platform-browser-dynamic": "^21.0.3",
    "@angular/router": "^21.0.3",
    "@angular/service-worker": "^21.0.3",
    "@auth0/angular-jwt": "^5.2.0",
    "@microsoft/signalr": "^10.0.0",
    "@primeng/themes": "^21.0.1",
    "ngx-markdown": "^21.0.1",
    "primeicons": "^7.0.0",
    "primeng": "21.0.1",
    "rxjs": "~7.8.2",
    "tailwindcss-primeui": "^0.6.1",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@angular-eslint/builder": "^21.0.0",
    "@angular-eslint/eslint-plugin": "^21.0.0",
    "@angular-eslint/eslint-plugin-template": "^21.0.0",
    "@angular/build": "^21.0.2",
    "@angular/cli": "^21.0.2",
    "@angular/compiler-cli": "^21.0.3",
    "@faker-js/faker": "^10.1.0",
    "@orval/angular": "^7.17.0",
    "@orval/core": "^7.17.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "@vitest/coverage-v8": "^4.0.15",
    "@vitest/ui": "^4.0.15",
    "autoprefixer": "^10.4.22",
    "cypress": "^15.7.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^5.5.4",
    "happy-dom": "^20.0.11",
    "msw": "^2.12.4",
    "npm-check-updates": "^19.2.0",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "vitest": "^4.0.15"
  }
}
