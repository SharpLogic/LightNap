{
  "name": "lightnap-ng",
  "version": "20.0.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --proxy-config proxy.conf.js",
    "start:prod": "ng serve --proxy-config proxy-prod-backend.conf.js",
    "build": "ng build",
    "test:watch": "ng test --watch=true",
    "test:ci": "ng test --watch=false --browsers=ChromeHeadless",
    "test:coverage": "ng test --watch=false --code-coverage --browsers=ChromeHeadless",
    "test:coverage:open": "ng test --watch=false --code-coverage --browsers=ChromeHeadless && start coverage/lightnap-ng/index.html",
    "test:headless": "ng test --watch=false --browsers=ChromeHeadless",
    "test:debug": "ng test --browsers=Chrome --watch=true --source-map",
    "e2e": "cypress run",
    "e2e:backend": "node run-e2e-backend.js",
    "e2e:open": "cypress open",
    "e2e:ci": "cypress run --record --parallel",
    "e2e:mocks": "cypress run --env useMocks=true",
    "e2e:mocks:open": "cypress open --env useMocks=true",
    "deploy": "ng build --configuration production",
    "update:check": "ncu --reject \"/@angular/\"",
    "update:deps": "ncu -u --reject \"/@angular/\" && npm install && npm run build",
    "update:angular": "ng update @angular/core @angular/cli && npm run build",
    "update:all": "npm run update:angular && npm run update:deps",
    "update:all:test": "npm run update:all && npm run test:ci"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^21.0.3",
    "@angular/common": "^21.0.3",
    "@angular/compiler": "^21.0.3",
    "@angular/core": "^21.0.3",
    "@angular/elements": "^21.0.3",
    "@angular/forms": "^21.0.3",
    "@angular/platform-browser": "^21.0.3",
    "@angular/platform-browser-dynamic": "^21.0.3",
    "@angular/router": "^21.0.3",
    "@angular/service-worker": "^21.0.3",
    "@auth0/angular-jwt": "^5.2.0",
    "@microsoft/signalr": "^10.0.0",
    "@primeng/themes": "^21.0.1",
    "ngx-markdown": "^21.0.1",
    "primeicons": "^7.0.0",
    "primeng": "21.0.1",
    "rxjs": "~7.8.2",
    "tailwindcss-primeui": "^0.6.1",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@angular/build": "^21.0.2",
    "@angular/cli": "^21.0.2",
    "@angular/compiler-cli": "^21.0.3",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/jasmine": "~5.1.13",
    "autoprefixer": "^10.4.22",
    "cypress": "^15.7.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^5.5.4",
    "jasmine-core": "~5.13.0",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "npm-check-updates": "^19.1.2",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "tailwindcss": "^4.1.17",
    "typescript": "~5.9.3"
  }
}