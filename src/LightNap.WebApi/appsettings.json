{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "DatabaseProvider": "Sqlite", // "SqlServer" or "Sqlite" or "InMemory"
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=LightNap.db",
    "Redis": "localhost:6379"
